@page
@model IndexModel
@{
    ViewData["Title"] = "V4";
}


<script>

    function getContentsOfBodyLatest() {
        var str =  "{  \"id\": \"" + $("#id").val() + "\", \"title\": \"" + $("#title").val() + "\", \"owner\": \"" + $("#owner").val() + "\", \"purpose\": \"" + $("#purpose").val() + "\", \"actors\": [{\"name\": \"" + $("#actor-name").val() + "\",\"age\": \"" + $("#actor-age").val() + "\"}]} ";
        console.log(str);
        return str;
    }

    function getContentsOfBodyVersion() {

        var str = "{  \"id\": \"" + $("#id-2").val() + "\", \"title\": \"" + $("#title-2").val() + "\", \"owner\": \"" + $("#owner-2").val() + "\", \"purpose\": \"" + $("#purpose-2").val() + "\", \"actors\": [{\"name\": \"" + $("#actor-name-2").val() + "\",\"age\": \"" + $("#actor-age-2").val() + "\"}]} ";
        console.log(str);
        return str;
    }


    var latestAPI = 'https://localhost:44376/api/processes';
    var versionedApi = 'https://localhost:44376/api/v4/processes';

</script>

<div class="text-center">
    <h1 class="display-4">V4 (ProcessSchema) </h1>
    <p>
        This is the forth iteration of the object<br />
        we have now added a list element so the object is getting much more complicated <br />
        It consists attributes and a list element of actors<br />
        An Actor consists of two fields 
        Name and Age
        <br />
    </p>

    <div class="col-md-12 row">
        <div class="shadow border col-md-4">

            <p class="display-4">API latest </p>


            <div class="col-md-12">
                <div class="form-group row">
                    <div class="col-md-4"><input type="button" value="Get By Id" onclick="get('https://localhost:44376/api/processes', '4', true, '#id-to-request')" /></div>
                    <div class="col-md-8"><input type="text" id="id-to-request" name="id-to-request" /></div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group row">
                    <div class="col-md-4"><input type="button" value="GetAll" onclick="getAll('https://localhost:44376/api/processes', '4', true)" /></div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group row">
                    <div class="col-md-4"><input type="button" value="Write" onclick="writeX('https://localhost:44376/api/processes', '4', true, getContentsOfBodyLatest)" /></div>
                    <div class=" col-md-8">&nbsp;</div>
                    <div class=" col-md-8"><input type="text" id="id" name="id" placeholder="id" /></div>
                    <div class=" col-md-8"><input type="text" id="title" name="title" placeholder="title" /></div>
                    <div class=" col-md-8"><input type="text" id="owner" name="owner" placeholder="owner" /></div>
                    <div class=" col-md-8"><input type="text" id="purpose" name="purpose" placeholder="purpose" /></div>
                    <div class=" col-md-8"><input type="text" id="actor-name" name="actor-name" placeholder="Actor Name" /></div>
                    <div class=" col-md-8"><input type="text" id="actor-age" name="actor-age" placeholder="Actor Age" /></div>

                </div>
            </div>
        </div>

        <div class="shadow border col-md-4">
            <pre id="result" name="result" class="text-left"></pre>
        </div>


        <p></p>

        <div class="shadow border col-md-4">

            <p class="display-4">API V4</p>

            <div class="col-md-12">
                <div class="form-group row">
                    <div class="col-md-4"><input type="button" value="Get By Id" onclick="get(versionedApi, null, false, '#id-to-request-2')" /></div>
                    <div class="col-md-8"><input type="text" id="id-to-request-2" name="id-to-request" /></div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group row">
                    <div class="col-md-4"><input type="button" value="GetAll" onclick="getAll(versionedApi, null, false)" /></div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group row">
                    <div class="col-md-4"><input type="button" value="Write" onclick="writeX(versionedApi, null, false, getContentsOfBodyVersion)" /></div>
                    <div class=" col-md-8">&nbsp;</div>
                    <div class=" col-md-8"><input type="text" id="id-2" name="id-2" placeholder="id" /></div>
                    <div class=" col-md-8"><input type="text" id="title-2" name="title-2" placeholder="title" /></div>
                    <div class=" col-md-8"><input type="text" id="owner-2" name="owner-2" placeholder="owner" /></div>
                    <div class=" col-md-8"><input type="text" id="purpose-2" name="purpose-2" placeholder="purpose" /></div>
                    <div class=" col-md-8"><input type="text" id="actor-name-2" name="actor-name-2" placeholder="Actor Name" /></div>
                    <div class=" col-md-8"><input type="text" id="actor-age-2" name="actor-age-2" placeholder="Actor Age" /></div>

                </div>
            </div>
        </div>
    </div>

    <script src="~/js/calls.js"></script>
